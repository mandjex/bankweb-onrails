<%= semantic_form_for @client do |form| %>
    <%= form.inputs :name => "Create new customer" do %>
        <%= form.input :gender, :as => :radio, :collection => ["M", "F"] %>
        <%= form.input :first_name %>
        <%= form.input :last_name %>
        <%= form.input :street_number %>
        <%= form.input :street_name %>
        <%= form.input :postal_code %>
        <%= form.input :city %>
    <% end %>
    <%= form.buttons :commit %>
<% end %>
